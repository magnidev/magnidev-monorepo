{
  "name": "magnidev-monorepo",
  "license": "ISC",
  "private": true,
  "description": "Monorepo for Magni Development tools.",
  "publisher": "fermeridamagni <Magni Development>",
  "author": {
    "name": "fermeridamagni <Magni Development>",
    "url": "https://www.magnideveloper.com"
  },
  "repository": {
    "url": "https://github.com/fermeridamagni/magnidev.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/fermeridamagni/magnidev/issues"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format:fix": "prettier --write .",
    "format:check": "prettier --check .",
    "repo-cli": "cd packages/repo-cli && pnpm build && cd ../.. && node ./packages/repo-cli/dist/main.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "release": {
    "repositoryUrl": "https://github.com/fermeridamagni/magnidev",
    "versioningStrategy": "independent"
  },
  "devDependencies": {
    "@magnidev/repo-cli": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": ">=18"
  }
}
