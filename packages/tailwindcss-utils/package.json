{
  "name": "@magnidev/tailwindcss-utils",
  "version": "1.0.2",
  "description": "A collection of utility functions for Tailwind CSS, designed to enhance the development experience and streamline the use of Tailwind in projects.",
  "keywords": [
    "magnidev"
  ],
  "author": {
    "name": "fermeridamagni <Magni Development>",
    "email": "hello@magni.dev",
    "url": "https://magni.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magnidev/magnidev-monorepo.git",
    "directory": "packages/tailwindcss-utils"
  },
  "bugs": {
    "url": "https://github.com/magnidev/magnidev-monorepo/issues",
    "email": "help@magni.dev"
  },
  "homepage": "https://magni.dev/en/docs/developers/packages/tailwindcss-utils/getting-started/introduction",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "unbuild",
    "build:stub": "unbuild --stub",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "tailwindcss": ">=4.1.18"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "typescript": "5.9.3",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.27.0"
}
